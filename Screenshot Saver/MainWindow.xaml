<Window x:Class="Screenshot_Saver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screenshot_Saver"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label x:Name="YesLabel">DA</Label>
          
            <Button x:Name="SaveButton" HorizontalAlignment="Left" Click="SaveButton_Click">Save Screenshot</Button>
            <TextBox x:Name="FileNameTextBox"></TextBox>
            <Button x:Name="SelectDirectoryButton" HorizontalAlignment="Left" Click="SelectDirectoryButton_Click">Select directory</Button>
            <Button x:Name="SaveSettingsButton" HorizontalAlignment="Left" Click="SaveSettingsButton_Click">Save Settings</Button>
            <Button x:Name="AutomaticButton" HorizontalAlignment="Left" Click="AutomaticButton_Click">Automatic</Button>
        </StackPanel>
    </Grid>
</Window>
