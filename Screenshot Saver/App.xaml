<Application x:Class="Screenshot_Saver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Screenshot_Saver"
             StartupUri="Views/MainWindow.xaml">
    
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionaries/DarkThemeColors.xaml"/>
                <ResourceDictionary Source="Dictionaries/Styles.xaml"/>
                <!--<ResourceDictionary Source="Dictionaries/LightThemeStoryboards.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
